@model HomeManagementApp.Models.Reward
@{
    ViewData["Title"] = "Edytuj nagrodę";
}

<h2>Edytuj nagrodę</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Nazwa</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label">Koszt</label>
        <input asp-for="Cost" class="form-control" type="number" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
