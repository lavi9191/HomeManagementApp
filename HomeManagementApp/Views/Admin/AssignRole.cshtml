@model IEnumerable<HomeManagementApp.Models.AppUser>

@{
    ViewData["Title"] = "Nadawanie uprawnień";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AssignRole">
    <div class="form-group">
        <label for="email">Email użytkownika</label>
        <input type="email" class="form-control" id="email" name="email" required />
    </div>
    <button type="submit" class="btn btn-primary">Przypisz rolę Admin</button>
</form>

<form asp-action="RemoveRole">
    <div class="form-group">
        <label for="emailRemove">Email użytkownika</label>
        <input type="email" class="form-control" id="emailRemove" name="emailRemove" required />
    </div>
    <button type="submit" class="btn btn-warning">Zabierz rolę Admin</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}
<div>
    <a asp-controller="Admin" asp-action="Index">Powrót do panelu admina</a>
</div>
